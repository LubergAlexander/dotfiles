	email = alex@luberg.me

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    side-by-side = true
    line-numbers = true

[merge]
    conflictstyle = zdiff3

# TODO: Add auto detection with dark-notify
[delta "light"]
   light = true
   syntax-theme = "gruvbox-light"

[delta "dark"]
   dark = true
   syntax-theme = "gruvbox-dark"
